{
  "name": "good-habits-webapp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:client": "parcel watch src/client.js --out-dir public --public-url .",
    "live:client": "parcel build src/client.js --out-dir public --public-url .",
    "lint": "prettier --check \"src/**/*.js\"",
    "fix": "prettier --write \"src/**/*.js\"",
    "start": "npm run dev:client & nodemon --watch src src/server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "cookie-parser": "^1.4.4",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "mithril": "^2.0.4",
    "mongoose": "^5.7.7",
    "mongoose-slug-updater": "^3.1.4",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0"
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "nodemon": "^1.19.4",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.18.2"
  }
}
